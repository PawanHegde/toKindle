<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ToKindle" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- FAB overlay color -->
        <item name="fabOverlayColour">@color/purple_200</item>

        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.ToKindle.LargeComponent
        </item>
    </style>
</resources>