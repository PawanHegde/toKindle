<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ActivityTitle" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="background">?attr/colorSurface</item>
    </style>

    <style name="Card">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:drawablePadding">24dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="CardTitle" parent="TextAppearance.AppCompat.Title" />

    <style name="CardDetail" parent="TextAppearance.AppCompat.Subhead" />

    <style name="BottomSheet" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="ShapeAppearance.ToKindle.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">50dp</item>
    </style>

    <style name="BottomSheetHeader" parent="TextAppearance.AppCompat.Title">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomSheetMenuOption">
        <item name="android:drawablePadding">24dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal" />

    <style name="AddEmail" parent="Widget.AppCompat.Button.Colored" />

    <style name="EmptyStateIcon">
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:maxWidth">20dp</item>
    </style>

    <style name="EmptyStateTitle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="EmptyStateSubtitle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
    </style>

    <style name="NoEmails" parent="TextAppearance.AppCompat.Medium">
        <item name="android:paddingTop">40dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:lineSpacingExtra">1.5sp</item>
        <item name="android:layout_marginEnd">40dp</item>
    </style>

    <style name="Widget.ToKindle.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
</resources>